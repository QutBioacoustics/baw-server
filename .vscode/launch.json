{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(ruby-debug) RSpec - active spec file only",
      "type": "ruby-debug",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rspec",
      "programArgs": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ],
      "useBundler": false
    },
    {
      "name": "(ruby-debug) RSpec - all tests",
      "type": "ruby-debug",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rspec",
      "programArgs": [
        "${workspaceFolder}"
      ],
      "useBundler": false
    },
    {
      "name": "(Ruby) RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}"
      ],
      "env": {
        "RAILS_ENV": "test"
      }
    },
    {
      "name": "(Ruby) RSpec - current file3",
      "type": "Ruby",
      "request": "launch",
      "internalConsoleOptions": "openOnSessionStart",
      "showDebuggerOutput": true,
      "useBundler": true,
      "pathToBundler": "${workspaceRoot}/bin/bundle",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}",
      ],
      "env": {
        "RAILS_ENV": "test",
        "DEBUGGER_HOST": "0.0.0.0"
      }
    },
    {
      "name": "(Ruby) RSpec - specific spec in active file only",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}[${input:rspecSpecId}]"
      ],
      "env": {
        "RAILS_ENV": "test"
      },
    },
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server",
        "--binding=0.0.0.0"
      ],
      "env": {
        "RAILS_ENV": "development"
      },
      "postDebugTask": {
        "task": "Stop Passenger",
        "type": "shell"
      }
    },
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Listen for rdebug-ide (workers)",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "workers",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "cwd": "${workspaceRoot}/baw-workers"
    },
  ],
  "inputs": [
    {
      "id": "rspecSpecId",
      "type": "promptString",
      "description": "Enter the rspec spec ID (without square braces). E.g. `1:3:5:1:1`",
      "default": "1"
    }
  ]
}
