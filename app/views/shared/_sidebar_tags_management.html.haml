-# locals: tag_to_manage
- content_for(:left_sidebar_header, 'Tags')
- content_for(:left_sidebar) do
  %li{class: ('active' if current_page?(admin_dashboard_path))}
    = link_to 'Admin Home', admin_dashboard_path
  %li{class: ('active' if current_page?(tags_management_index_path))}
    = link_to 'Tag List', tags_management_index_path,  title: 'Manage tags', data: {toggle: 'tooltip',  placement: 'right'}
  %li{class: ('active' if current_page?(new_tags_management_path))}
    = link_to 'New Tag', new_tags_management_path,  title: 'Create a new tag', data: {toggle: 'tooltip',  placement: 'right'}
  - if defined?(tag_to_manage)
    - if  can?(:show, tag_to_manage)
      %li{class: ('active' if current_page?(edit_tags_management_path(tag_to_manage)))}
        = link_to 'Edit Tag', edit_tags_management_path(tag_to_manage),  title: 'Modify tag details', data: {toggle: 'tooltip',  placement: 'right'}