- content_for :meta_title, "Script #{@script.display_name} | New Version"
- content_for :page_title, "New Version of #{@script.display_name}"

= render partial: 'shared/sidebar_script', locals: {script: @script}

- content_for :right_sidebar do
  = render partial: 'shared/sidebar_metadata_heading', locals: {title: 'Script', icon_class: 'file-text-o'}

= simple_form_for @script, html: {class: 'form-horizontal', multipart: true, method: :post } do |f|
  = render partial: 'form', locals: {f: f, script:@script}