- if script == current_version
  - css_class = 'info'
- else
  - css_class = ''

%tr{class: css_class}
  %td= link_to script.name, script_path(script)
  %td= script.version
  %td= script.analysis_identifier
  %td= link_to_if script.settings_file_file_name, script.settings_file_file_name, script.settings_file.url
  %td= link_to_if script.data_file_file_name, script.data_file_file_name, script.data_file.url
  -#%td.nolink
  -#  = link_to script, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn-destroy btn btn-mini' do
  -#    Delete
- unless script.update_from.blank?
  = render partial: 'scripts/script_row', locals: { script: script.update_from, current_version: current_version}
