#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts '== Installing dependencies =='
  system 'gem install bundler --conservative --no-ri --no-rdoc'
  system 'bundle check || bundle install'


  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   system "cp config/database.yml.sample config/database.yml"
  # end

  puts "\n== Preparing database =="
  system 'bin/rake db:setup'

  puts "\n== Removing logs, tempfiles, docs, and test results =="
  system 'rm -f log/*'
  system 'rm -rf tmp/*'
  system 'rm -rf coverage'
  system 'rm -rf doc'

  # puts "\n== Restarting application server =="
  # system 'touch tmp/restart.txt'

  puts "\n== Running rspec tests =="
  system 'bin/rspec --format progress --color'

  puts "\n== Generating API documentation =="
  system 'bin/rake docs:generate GENERATE_DOC=true'

  puts "\n== Configuration =="
  puts "\n===> Create config/settings/development.yml and config/settings/test.yml based on config/settings/default.yml <=="
end
